<ui:FluentWindow x:Class="MRdownload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Modrinth Downloader" Height="300" Width="550"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        WindowCornerPreference="Round"
        Background="Transparent">

    <Grid>
        <ui:TitleBar Title=" Modrinth Downloader" />

        <StackPanel Margin="20,50,20,20">
            
            <TextBlock x:Name="TxtCarpeta" Text="Destino: Automático (Misma carpeta del .mrpack)" Foreground="Gray" Margin="0,0,0,5" />
            <ui:Button Content="📁 Elegir Carpeta de Destino (Opcional)" 
                       Click="BtnSeleccionarCarpeta_Click" 
                       Margin="0,0,0,20" Padding="10,5"/>

            <TextBlock x:Name="TxtEstado" Text="Esperando archivo .mrpack..." Margin="0,0,0,10"/>
            <ProgressBar x:Name="BarraProgreso" Height="20" Margin="0,0,0,20" />
            
            <ui:Button x:Name="BtnBuscar" Content="🚀 Seleccionar .mrpack y Extraer" 
                       Appearance="Primary" 
                       Click="BtnBuscar_Click" 
                       HorizontalAlignment="Stretch" Padding="0,10" FontSize="14"/>
            
        </StackPanel>
    </Grid>
</ui:FluentWindow>